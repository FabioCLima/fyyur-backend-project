# Fyyur Application Environment Variables

# Database Configuration
# Development (SQLite)
DATABASE_URL=sqlite:///fyyur.db

# Production (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/fyyur

# Security
SECRET_KEY=your-secret-key-change-this-in-production
WTF_CSRF_SECRET_KEY=csrf-secret-key-change-this-too

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development

# Debug Mode (True for development, False for production)
DEBUG=True

# Logging
LOG_LEVEL=INFO

# Optional: External Services
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password